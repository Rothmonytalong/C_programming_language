#include <stdio.h>

int main(int argc, const char * argv[]) 
{
    
    int number;
    int result;
    printf("Please enter a positive integer: ");
    scanf("%d",&number);
    
    if(number > 0 && number % 2 == 0)
    {
        result = number / 2;
        printf("The next value of the number is: %d\n", result);
    }
    if (number > 0 && number % 2 != 0)
    
    {
        result = (( number * 3 )+1);
        printf("The next value of the number is: %d\n", result);
        
    }
    return 0;
}
